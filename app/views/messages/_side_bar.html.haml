.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path, class: "btn" do
          = icon('far', 'edit', class: "btn-icon")
          %span<>
        = link_to edit_user_path(current_user), class: "btn" do
          = icon('fas', 'cog', class: "btn-icon")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        .group-box
          = link_to group_messages_path(group) do
            .group-box__name
              = group.name
            .group-box__new-message
              = group.show_last_message
            
